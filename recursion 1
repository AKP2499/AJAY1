#include<stdio.h>
int factarial(int number)
{
if (number==1||number==0)
{
    return 1;
}
else{
    return(number*factarial(number-1));

}

}
int main(int argc, char const *argv[])
{
    int num;
    printf("enter the number  you want factarial of\n");
    scanf("%d",&num);
    printf("the factorial of %d is %d\n",num, factarial(num));

    return 0;
}
